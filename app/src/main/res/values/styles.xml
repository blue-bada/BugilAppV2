<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="AppBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="AppLightBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorLightBlue</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="AppGreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreen</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="AppIndigoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorIndigo</item>
        <item name="colorPrimaryDark">@color/colorIndigo</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="AppTestTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBugil</item>
        <item name="colorPrimaryDark">@color/colorBugil</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#828282</item>
        <item name="android:background">#fafafa</item>
        <item name="colorAccent">#009180</item>
    </style>

    <style name="AppCompatErrorAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#FF5722</item>
        <item name="android:background">#fafafa</item>
        <item name="colorAccent">#E64A19</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
